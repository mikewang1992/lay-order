@model sys.Models.Member

@{
    ViewBag.Title = "刪除員工帳號";
}

<h3>@ViewBag.Title</h3>

<h4 style="color: brown">你確定要刪除此帳號嗎?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Account)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Account)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tel)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Img)
        </dt>

        <dd>
            @{
                ViewBag.Img = Model.Img;
            }
            <img src="/Admin/UploadFile/Img/@ViewBag.Img">
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Permission)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Permission)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color right">
            <input type="submit" value="刪除" class="btn btn-default" /> 
            <a href="~/Admin/BKMembers" class="btn btn-default" style="padding-left: 10px">取消</a>
        </div>
    }
</div>
